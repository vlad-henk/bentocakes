<nav class="bg-white/90 backdrop-blur-sm shadow-lg sticky top-0 z-50">
  <div class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <!-- Лого -->
      <div class="flex items-center space-x-3">
        <%= link_to root_path, class: 'flex items-center space-x-3' do %>
          <div class="w-12 h-12 bg-gradient-to-br from-rose-500 to-pink-600 rounded-full flex items-center justify-center shadow-lg">
            <span class="text-white text-2xl font-bold">B</span>
          </div>
          <h1 class="text-3xl font-bold text-rose-800">Bento<span class="text-amber-600">Cakes</span></h1>
        <% end %>
      </div>
      
      <!-- Навігаційні посилання -->
      <div class="hidden md:flex space-x-8">
        <%= link_to 'Головна', root_path, 
              class: "text-rose-700 hover:text-rose-900 font-medium #{'text-rose-900 font-semibold border-b-2 border-rose-500' if current_page?(root_path)}" %>
        <%= link_to 'Меню', products_path, 
              class: "text-rose-700 hover:text-rose-900 font-medium #{'text-rose-900 font-semibold border-b-2 border-rose-500' if current_page?(products_path)}" %>
        <%= link_to 'Доставка', delivery_path, 
              class: "text-rose-700 hover:text-rose-900 font-medium #{'text-rose-900 font-semibold border-b-2 border-rose-500' if current_page?(delivery_path)}" %>
        <%= link_to 'Про нас', about_path, 
              class: "text-rose-700 hover:text-rose-900 font-medium #{'text-rose-900 font-semibold border-b-2 border-rose-500' if current_page?(about_path)}" %>
        <%= link_to 'Контакти', contact_path, 
              class: "text-rose-700 hover:text-rose-900 font-medium #{'text-rose-900 font-semibold border-b-2 border-rose-500' if current_page?(contact_path)}" %>
      </div>
      
      <!-- Іконки дій -->
      <div class="flex items-center space-x-6">
        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <%= link_to 'Адмінка',
                  admin_root_path,
                  class: 'text-amber-600 hover:text-amber-800 font-semibold hidden md:block' %>
          <% end %>
          <%= link_to 'Мої замовлення', orders_path, 
                class: 'text-rose-700 hover:text-rose-900 font-medium hidden md:block' %>
          <%= link_to current_user.name, edit_user_registration_path, 
                class: 'text-rose-700 hover:text-rose-900 font-medium' %>
          <%= button_to 'Вийти', destroy_user_session_path, 
                method: :delete,
                class: 'text-rose-700 hover:text-rose-900 font-medium bg-transparent border-none cursor-pointer' %>
        <% else %>
          <%= link_to 'Увійти', new_user_session_path, 
                class: 'text-rose-700 hover:text-rose-900 font-medium' %>
          <%= link_to 'Реєстрація', new_user_registration_path, 
                class: 'bg-rose-600 text-white px-6 py-2 rounded-full hover:bg-rose-700 transition shadow-md' %>
        <% end %>
        
        <%= link_to cart_path, class: 'relative' do %>
          <div class="w-10 h-10 bg-rose-100 rounded-full flex items-center justify-center hover:bg-rose-200 transition">
            <svg class="w-6 h-6 text-rose-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            <% cart_count = cart_items_count %>
            <% if cart_count > 0 %>
              <span class="absolute -top-1 -right-1 bg-amber-500 text-white text-xs w-5 h-5 rounded-full flex items-center justify-center">
                <%= cart_count %>
              </span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</nav>