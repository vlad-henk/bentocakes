<div class="mb-8 flex justify-between items-center">
  <div>
    <h1 class="text-3xl font-bold text-gray-800">Управління товарами</h1>
    <p class="text-gray-600">Всього товарів: <%= @products.count %></p>
  </div>
  <%= link_to 'Новий товар', new_admin_product_path, class: 'bg-rose-600 text-white px-6 py-3 rounded-lg hover:bg-rose-700' %>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Назва</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Категорія</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Ціна</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Статус</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Дії</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @products.each do |product| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">#<%= product.id %></td>
            <td class="px-6 py-4 whitespace-nowrap">
              
              <div class="text-sm font-medium text-gray-900"><%= product.name %></div>
              <div class="text-sm text-gray-500"><%= product.description.truncate(50) %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= product.category %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= number_to_currency(product.price, unit: '₴') %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if product.active? %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                  Активний
                </span>
              <% else %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                  Неактивний
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
              <%= link_to 'Редагувати',
                    edit_admin_product_path(product),
                    class: 'text-blue-600 hover:text-blue-900' %>

              <% if product.active? %>
                <%= button_to 'Деактивувати',
                      deactivate_admin_product_path(product),
                      method: :patch,
                      data: { confirm: 'Деактивувати товар?' },
                      class: 'text-red-600 hover:text-red-900 bg-transparent border-0 p-0 inline' %>
              <% else %>
                <%= button_to 'Активувати',
                      activate_admin_product_path(product),
                      method: :patch,
                      class: 'text-green-600 hover:text-green-900 bg-transparent border-0 p-0 inline' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>